{
  //https://developer.chrome.com/extensions/manifest


  "name": "Search Engine Scraper",
  "version": "1.1",
  "description": "Search, Scrape and Export Results",
  "offline_enabled": true,
  "manifest_version": 2,


  /* Comment below on Production */
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "include_globals": [
        "*://*/*"
      ],
      "css": ["css/app.css"],
      "js": ["js/core.js","js/config.js","js/extend.js","js/init.js"],
      "run_at": "document_end",
      "all_frames": false

    }
  ],

  //https://developer.chrome.com/extensions/background_pages
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "devtools_page": "devtools.html",


  //https://developer.chrome.com/extensions/optionsV2
  "options_page": "options.html",
  /*"options_ui": {
    // Required.
    "page": "options.html",
    // Recommended.
    "chrome_style": false
  },*/


 //https://developer.chrome.com/extensions/manifest/externally_connectable
 "externally_connectable": {
    // Extension and app IDs. If this field is not specified, no
    // extensions or apps can connect.
    "ids": ["*"],
    // Match patterns for web pages. Does not affect content scripts.
    // If this field is not specified, no webpages can connect.
    "matches": [
      "*://google.com/*",
      "*://goo.gl/*",
      "*://yahoo.com/*",
      "*://search.yahoo.com/*",
      "*://bing.com/*",
      "*://duckduckgo.com/*",
      "*://ask.com/*",
      "*://aol.com/*"
    ],
    // Indicates that the extension would like to make use of the TLS
    // channel ID of the web page connecting to it. The web page must
    // also opt to send the TLS channel ID to the extension via setting
    // includeTlsChannelId to true in runtime.connect's connectInfo
    // or runtime.sendMessage's options.
    "accepts_tls_channel_id": false
  },


  "permissions": [
    //"dns",
    "tabs",
    "idle",
    "alarms",
    "storage",
    "cookies",
    "history",
    //"idltest",
    "*://*/*",
    "privacy",
    "identity",
    "debugger",
    "downloads",
    "activeTab",
    "bookmarks",
    "background",
    "experimental",
    "contextMenus",
    "fontSettings",
    "browsingData",
    "clipboardRead",
    "clipboardWrite",
    "desktopCapture",
    "unlimitedStorage",
    "declarativeContent",
    "ttsEngine"
  ],

  //https://developer.chrome.com/extensions/ttsEngine
  "tts_engine": {
    "voices": [
      {
        "voice_name": "Alice",
        "lang": "en-US",
        "gender": "female",
        "event_types": ["start", "marker", "end"]
      },
      {
        "voice_name": "Pat",
        "lang": "en-US",
        "event_types": ["end"]
      }
    ]
  },
  

  //https://developer.chrome.com/extensions/omnibox
  "omnibox": {
    "keyword": "UWCP"
  },


  "browser_action": {
      "default_title": "Search Engine Scraper",
      "default_icon": "img/icon.png",
      "default_popup": "app.html"
  },


  "externally_connectable": {
    "matches": ["*://*.ownasquare.com/*"]
  },

  "content_security_policy": "script-src 'self' https://ownasquare.com/app/; object-src 'self'"
}
